<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="/xsl/SGr.xsl"?>
<sgr:RestApiDeviceFrame deviceName="CLEMAP Energy Monitor" isLocalControl="false" specificationOwnerIdentification="0" manufacturerName="CLEMAP"
  xmlns:sgr="http://www.smartgridready.com/ns/V0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.smartgridready.com/ns/V0/ ../../SchemaDatabase/SGr/EI-RestAPI/SGrRestAPI_EIDeviceFrame.xsd ">
  <sgr:releaseNotes>
    <sgr:state>Draft</sgr:state>
  </sgr:releaseNotes>
  <sgr:deviceProfile>
    <sgr:transportService>RESTfulJSON</sgr:transportService>
    <sgr:deviceKind>SubMeterElectricity</sgr:deviceKind>
    <sgr:softwareRevision>1.0.0</sgr:softwareRevision>
    <sgr:manufSpecIdent>CLEMAP</sgr:manufSpecIdent>
  </sgr:deviceProfile>
  <sgr:restApiInterfaceDescription>
    <sgr:restAPIInterfaceSelection>trspSrvRestURI</sgr:restAPIInterfaceSelection>
    <sgr:trspSrvRestURIoutOfBox>{{baseUri}}</sgr:trspSrvRestURIoutOfBox>
    <sgr:restAPIAuthenticationMethod>BearerSecurityScheme</sgr:restAPIAuthenticationMethod>
    <sgr:restAPIBearer>
      <sgr:serviceCall>
        <sgr:requestHeader>
          <sgr:header headerName="Accept" value="application/json"/>
        </sgr:requestHeader>
        <sgr:requestMethod>POST</sgr:requestMethod>
        <sgr:requestPath>/authentication</sgr:requestPath>
        <sgr:requestBody>{"strategy": "local", "email": "{{username}}", "password": "{{password}}"}</sgr:requestBody>
        <sgr:responseQuery>
          <sgr:queryType>JMESPathExpression</sgr:queryType>
          <sgr:query>accessToken</sgr:query>
        </sgr:responseQuery>
      </sgr:serviceCall>
    </sgr:restAPIBearer>
  </sgr:restApiInterfaceDescription>
  <sgr:functionalProfileListElement>
    <sgr:functionalProfile profileName="ActivePowerAC">
      <sgr:profileNumber>
        <sgr:specificationOwnerIdentification>0</sgr:specificationOwnerIdentification>
        <sgr:functionalProfileCategory>NonSpecific</sgr:functionalProfileCategory>
        <sgr:functionalProfileType>ActivePowerAC</sgr:functionalProfileType>
        <sgr:levelOfOperation>m</sgr:levelOfOperation>
        <sgr:versionNumber>
          <sgr:primaryVersionNumber>1</sgr:primaryVersionNumber>
          <sgr:secondaryVersionNumber>0</sgr:secondaryVersionNumber>
          <sgr:subReleaseVersionNumber>0</sgr:subReleaseVersionNumber>
        </sgr:versionNumber>
      </sgr:profileNumber>
    </sgr:functionalProfile>
    <sgr:dataPointListElement>
      <sgr:dataPoint datapointName="ActivePowerACtot" rwpDatadirection="R" unit="KILOWATTS" mroVisibilityIndicator="R">
        <sgr:dataType>
          <sgr:float64/>
        </sgr:dataType>
      </sgr:dataPoint>
      <sgr:restApiDataPoint dataType="JSON_number">
        <sgr:restServiceCall>
          <sgr:requestHeader>
            <sgr:header headerName="Accept" value="application/json"/>
            <sgr:header headerName="Authentication" value="Bearer {{bearerToken}}"/>
          </sgr:requestHeader>
          <sgr:requestMethod>GET</sgr:requestMethod>
          <sgr:requestPath>/digitaltwins/?sensor_id={{sensor_id}}</sgr:requestPath>
          <sgr:responseQuery>
            <sgr:queryType>JMESPathExpression</sgr:queryType>
            <sgr:query>sum([[0].ten_sec.p_l1,[0].ten_sec.p_l2,[0].ten_sec.p_l3])</sgr:query>
          </sgr:responseQuery>
        </sgr:restServiceCall>
      </sgr:restApiDataPoint>
