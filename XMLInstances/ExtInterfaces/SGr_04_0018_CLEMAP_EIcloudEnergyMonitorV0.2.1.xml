      </sgr:restApiDataPoint>
    </sgr:dataPointListElement>
    <sgr:dataPointListElement>
      <sgr:dataPoint datapointName="ActivePowerACL2" rwpDatadirection="R" unit="KILOWATTS" mroVisibilityIndicator="R">
        <sgr:dataType>
