          <sgr:requestPath>/digitaltwins/?sensor_id={{sensor_id}}</sgr:requestPath>
          <sgr:responseQuery>
            <sgr:queryType>JMESPathExpression</sgr:queryType>
            <sgr:query>[0].ten_sec.p_l3</sgr:query>
          </sgr:responseQuery>
        </sgr:restServiceCall>
      </sgr:restApiDataPoint>
    </sgr:dataPointListElement>
  </sgr:functionalProfileListElement>
