<schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:sgr="http://www.smartgridready.com/ns/V0/" attributeFormDefault="unqualified" elementFormDefault="qualified"
  targetNamespace="http://www.smartgridready.com/ns/V0/" version="0.2.2">
  <complexType name="HeaderEntry">
    <sequence>
      <element minOccurs="1" maxOccurs="1" name="headerName" type="string"/>
      <element minOccurs="1" maxOccurs="1" name="value" type="string"/>
    </sequence>
  </complexType>
  <complexType name="HeaderList">
    <sequence>
      <element minOccurs="0" maxOccurs="unbounded" name="header" type="sgr:HeaderEntry"/>
    </sequence>
  </complexType>
  <simpleType name="HttpMethod">
    <restriction base="string">
      <enumeration value="GET"/>
      <enumeration value="POST"/>
      <enumeration value="PUT"/>
      <enumeration value="PATCH"/>
      <enumeration value="DELETE"/>
    </restriction>
  </simpleType>
  <simpleType name="ResponseQueryType">
    <restriction base="string">
      <enumeration value="JMESPathExpression"/>
      <enumeration value="XPathExpression"/>
      <enumeration value="RegularExpression"/>
    </restriction>
  </simpleType>
  <complexType name="ResponseQuery">
    <sequence>
      <element minOccurs="1" maxOccurs="1" name="queryType" type="sgr:ResponseQueryType"/>
      <element minOccurs="1" maxOccurs="1" name="query" type="string"/>
    </sequence>
  </complexType>
  <complexType name="RestServiceCall">
    <sequence>
      <element minOccurs="0" maxOccurs="1" name="requestHeader" type="sgr:HeaderList"/>
      <element minOccurs="1" maxOccurs="1" name="requestMethod" type="sgr:HttpMethod"/>
      <element minOccurs="0" maxOccurs="1" name="requestPath" type="string"/>
      <element minOccurs="0" maxOccurs="1" name="requestBody" type="string"/>
      <element minOccurs="0" maxOccurs="1" name="responseQuery" type="sgr:ResponseQuery"/>
    </sequence>
  </complexType>
</schema>