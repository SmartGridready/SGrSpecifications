<schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:sgr="http://www.smartgridready.com/ns/V0/" attributeFormDefault="unqualified" elementFormDefault="qualified"
  targetNamespace="http://www.smartgridready.com/ns/V0/" version="0.2.2">
  <include schemaLocation="../Generic/SGrBaseDeviceFrame.xsd"/>

  <!-- Generic Device definitions -->
  <complexType name="GenericFunctionalProfile">
    <annotation>
      <documentation>Extends the base functional profile type with generic data points</documentation>
    </annotation>
    <complexContent>
      <extension base="sgr:FunctionalProfileBase">
        <sequence>
          <element maxOccurs="unbounded" minOccurs="1" name="dataPointListElement" type="sgr:DataPointBase"/>
        </sequence>
      </extension>
    </complexContent>
  </complexType>
  <complexType name="GenericDeviceFrame">
    <annotation>
      <documentation>Data type definition for a Generic Device Description as an EI (External Interface)</documentation>
    </annotation>
    <complexContent>
      <extension base="sgr:DeviceBase">
        <sequence>
          <element maxOccurs="1" minOccurs="1" name="functionalProfileListElement" type="sgr:GenericFunctionalProfile"/>
        </sequence>
      </extension>
    </complexContent>
  </complexType>
  <element name="GenericDeviceFrame" type="sgr:GenericDeviceFrame">
    <annotation>
      <documentation> RPT Root Point for Generic Device External Interface.</documentation>
    </annotation>
  </element>
</schema>