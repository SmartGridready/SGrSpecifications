<schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:sgr="http://www.smartgridready.com/ns/V0/" attributeFormDefault="unqualified" elementFormDefault="qualified"
  targetNamespace="http://www.smartgridready.com/ns/V0/" version="0.2.2">
  <include schemaLocation="../Generic/SGrBaseDeviceFrame.xsd"/>
  <include schemaLocation="SGrCommunicatorProfileType.xsd"/>

  <!-- Generic Communicator definitions -->
  <complexType name="CommGenFunctionalProfile">
    <annotation>
      <documentation>Extends the base functional profile type with generic data points</documentation>
    </annotation>
    <complexContent>
      <extension base="sgr:FunctionalProfileBaseType">
        <sequence>
          <element maxOccurs="unbounded" minOccurs="1" name="dataPointListElement" type="sgr:DataPointBase"/>
        </sequence>
      </extension>
    </complexContent>
  </complexType>
  <complexType name="CommunicatorFrame">
    <annotation>
      <documentation>Data type definition for a Communicator Description as an EI (External Interface)</documentation>
    </annotation>
    <complexContent>
      <extension base="sgr:CommunicatorBase">
        <sequence>
          <element maxOccurs="unbounded" minOccurs="1" name="functionalProfileListElement" type="sgr:CommGenFunctionalProfile"/>
        </sequence>
      </extension>
    </complexContent>
  </complexType>
  <element name="communicatorFrame" type="sgr:CommunicatorFrame">
    <annotation>
      <documentation> RPT Root Point for Communicator External Interface.</documentation>
    </annotation>
  </element>
</schema>