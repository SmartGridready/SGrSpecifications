<schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:sgr="http://www.smartgridready.com/ns/V0/" attributeFormDefault="unqualified" elementFormDefault="qualified"
  targetNamespace="http://www.smartgridready.com/ns/V0/" version="0.2.2">
  <include schemaLocation="../Generic/SGrBaseDeviceFrame.xsd"/>
  <include schemaLocation="../EI-Modbus/SGrModbusEIConfigurator.xsd"/>
  <include schemaLocation="../EI-RestAPI/SGrRestAPI_EIDataTypes.xsd"/>
  <complexType name="CommunicatorBase">
    <annotation>
      <documentation>Base type for device</documentation>
    </annotation>
    <sequence>
      <element maxOccurs="1" minOccurs="1" name="releaseNotes" type="sgr:ReleaseNotes"/>
      <element maxOccurs="1" minOccurs="1" name="communicatorInformation" type="sgr:CommunicatorInformation"/>
      <element maxOccurs="1" minOccurs="0" name="genericAttributes" type="sgr:GenericAttributes"/>
    </sequence>
    <attribute name="communicatorName" type="string">
      <annotation>
        <documentation>
          Device Name in the context of the manufacturer
        </documentation>
      </annotation>
    </attribute>
    <attribute name="manufacturerName" type="string">
      <annotation>
        <documentation>Name of the Manufacturer or OEM</documentation>
      </annotation>
    </attribute>
    <attribute name="specificationOwnerIdentification" type="sgr:SpecificationOwnerIdentification">
      <annotation>
        <documentation>
          the identifier as enumeration indicates that the manufacturer is related with the organisation and that this external interface is generated by himself
        </documentation>
      </annotation>
    </attribute>
    <attribute name="isLocalControl" type="boolean">
      <annotation>
        <documentation>
          Value "false" means "is cloud control device", indicating that this service is based on cloud. "True" indicates that services are provided within the range of the local area.
        </documentation>
      </annotation>
    </attribute>
  </complexType>
  <complexType name="CommunicatorInformation">
    <sequence>
      <element maxOccurs="1" minOccurs="0" name="alternativeNames" type="sgr:AlternativeNames">
        <annotation>
          <documentation>Ontology naming support</documentation>
        </annotation>
      </element>
      <element maxOccurs="4" minOccurs="0" name="legibleDescription" type="sgr:LegibleDescription">
        <annotation>
          <documentation>
            this is the published information related to this communicator
          </documentation>
        </annotation>
      </element>
      <element minOccurs="1" name="supportedTransportServices" type="sgr:TransportServices"/>
      <element maxOccurs="1" minOccurs="1" name="communicatorCategory" type="sgr:CommunicatorCategory"/>
      <element maxOccurs="1" minOccurs="1" name="versionNumber" type="string"/>
      <element minOccurs="0" name="brandName" type="string">
        <annotation>
          <documentation>branding information</documentation>
        </annotation>
      </element>
      <element maxOccurs="1" minOccurs="0" name="manufacturerSpecificationIdentification" type="string">
        <annotation>
          <documentation>specification identifier</documentation>
        </annotation>
      </element>
      <element maxOccurs="1" minOccurs="0" name="manufacturerLabel" type="string">
        <annotation>
          <documentation>the label of the device</documentation>
        </annotation>
      </element>
      <element maxOccurs="1" minOccurs="0" name="generalRemarks" type="string">
        <annotation>
          <documentation>
            author of this sheet may add remarks / non disclaimer statements
          </documentation>
        </annotation>
      </element>
      <element maxOccurs="1" minOccurs="0" name="levelOfOperation" type="sgr:LevelOfOperation">
        <annotation>
          <documentation>
            defines the SGr Label Level 1...6 of the highest level functional profile supported by the communicator
          </documentation>
        </annotation>
      </element>
    </sequence>
  </complexType>
  <simpleType name="CommunicatorCategory">
    <annotation>
      <documentation>Communicator types, a growing list of supported Communicators
      </documentation>
    </annotation>
    <restriction base="string">
      <enumeration value="SmartHome"/>
      <enumeration value="LightControl"/>
      <enumeration value="PowerBalancer"/>
      <enumeration value="AccountingSystem"/>
    </restriction>
  </simpleType>
  <complexType name="CommunicatorTransportService">
    <choice>
      <element name="modbus" type="sgr:ModbusInterfaceSelection"/>
      <element name="rest" type="sgr:RestApiInterfaceSelection"/>
    </choice>
  </complexType>
  <complexType name="TransportServices">
    <annotation>
      <documentation>A list of supported transport services.</documentation>
    </annotation>
    <sequence>
      <element maxOccurs="unbounded" minOccurs="0" name="transportService" type="sgr:CommunicatorTransportService"/>
    </sequence>
  </complexType>
</schema>